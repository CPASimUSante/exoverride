{% block javascripts %}
    <script src="{{ asset('bundles/cpasimusantechartnew/js/ChartNew.js') | raw }}"></script>
    <script src="{{ asset('bundles/cpasimusanteexoverride/js/exoverride-new.js') | raw }}"></script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/cpasimusanteexoverride/css/exoverride.css') }}">
{% endblock %}

